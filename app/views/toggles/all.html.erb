<% content_for :title do %>
    Feature toggles for <strong><%= params[:env] %></strong>
<% end %>

<ul id="toggles">
    <% @toggles.each do |name, value| %>
        <li id="<%= name %>" class="<%= value ? "on" : "off" %>">
            <%= link_to name, "/features/#{name}/edit" %>
            <% if user_signed_in? %>
                <%= button_to "Toggle",
                              {controller: "toggles", action: "toggle", feature: name},
                              {class: "button toggle" }
                %>
            <% end %>
            <div class="toggle-value"><%= value ? "ON" : "OFF" %></div>
        </li>
    <% end %>
</ul>