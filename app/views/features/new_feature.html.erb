<%= form_for :feature, url: '/feature/new' do %>
    <%= label_tag 'name' %>
    <%= text_field_tag 'name', nil, maxlength: 30 %>
    <%= label_tag 'display_name' %>
    <%= text_field_tag 'display_name', nil, maxlength: 40 %>
    <%= label_tag 'description' %>
    <%= text_area_tag 'description', nil, maxlength: 200 %>

    <%= submit_tag "Create new feature" %>
<% end %>

